package main

import (
	"bufio"
	"fmt"
	"os"
)

func main() {
	//Tulis kode disini
	var nama string
	var alamat string
	var email string

	scanner := bufio.NewScanner(os.Stdin)
	// nama
	scanner.Scan()
	nama = scanner.Text()
	// alamat
	scanner.Scan()
	alamat = scanner.Text()
	// email
	scanner.Scan()
	email = scanner.Text()

	fmt.Printf("Halo, saya %s. Saya tinggal di %s. Alamat email saya adalah %s", nama, alamat, email)
}
